package org.pk.oauth2.authserver.contoller;

import org.springframework.security.oauth2.provider.AuthorizationRequest;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

@Controller
@RequestMapping("/oauth/confirm_access")
public class Auth2ApprovalController {
	public ModelAndView getAccessConfirmation(@ModelAttribute AuthorizationRequest clientAuth, Model model) throws Exception {
		return new ModelAndView(clientAuth, "s");
	}
}
